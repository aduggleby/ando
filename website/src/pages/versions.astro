---
import ProviderLayout from "../layouts/ProviderLayout.astro";

const versions = [
  {
    version: "0.1.0",
    date: "2026-01-15",
    changes: [
      "Initial release",
      "Dotnet operations: Restore, Build, Test, Publish",
      "EF Core operations: Update, Migrate",
      "Npm operations: Install, Ci, Build, Run",
      "Node.js and .NET SDK installation",
      "Azure operations: authentication, Bicep deployments",
      "App Service and Functions deployments",
      "Cloudflare Pages deployment and cache purge",
      "Artifact operations for copying files to host",
      "Docker container isolation with warm container reuse",
    ],
  },
];
---

<ProviderLayout title="Versions" provider="Versions" description="Release history and changelog for ANDO.">
  <section id="installation" class="mb-8">
    <h2 class="mb-3 text-xl font-bold text-zinc-900 dark:text-white">Installation</h2>
    <p class="mb-4 text-zinc-500 dark:text-zinc-400">Install or update ANDO using the .NET CLI:</p>
    <div
      class="relative mb-4 overflow-x-auto rounded-xl border border-zinc-800 bg-zinc-900 p-4 font-mono text-sm leading-relaxed"
    >
      <pre
        class="m-0 whitespace-pre"><code class="text-zinc-200"><span class="text-slate-400 italic"># Install</span>
dotnet tool install -g ando

<span class="text-slate-400 italic"># Update to latest</span>
dotnet tool update -g ando

<span class="text-slate-400 italic"># Check version</span>
ando --version</code></pre>
    </div>
  </section>

  <section id="changelog" class="mb-8">
    <h2 class="mb-3 text-xl font-bold text-zinc-900 dark:text-white">Changelog</h2>

    {
      versions.map((release) => (
        <div class="mb-8">
          <div class="mb-3 flex items-baseline gap-3">
            <h3 class="text-lg font-semibold text-zinc-800 dark:text-zinc-200">{release.version}</h3>
            <span class="text-sm text-zinc-400 dark:text-zinc-500">{release.date}</span>
          </div>
          <ul class="space-y-1 text-zinc-500 dark:text-zinc-400">
            {release.changes.map((change) => (
              <li class="flex gap-2">
                <span class="text-cyan-600 dark:text-cyan-400">•</span>
                <span>{change}</span>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </section>

  <section id="roadmap" class="mb-8">
    <h2 class="mb-3 text-xl font-bold text-zinc-900 dark:text-white">Roadmap</h2>
    <p class="mb-4 text-zinc-500 dark:text-zinc-400">Planned features for upcoming releases:</p>
    <ul class="space-y-1 text-zinc-500 dark:text-zinc-400">
      <li class="flex gap-2">
        <span class="text-zinc-400 dark:text-zinc-500">•</span>
        <span>Parallel step execution</span>
      </li>
      <li class="flex gap-2">
        <span class="text-zinc-400 dark:text-zinc-500">•</span>
        <span>Conditional step execution</span>
      </li>
      <li class="flex gap-2">
        <span class="text-zinc-400 dark:text-zinc-500">•</span>
        <span>AWS operations</span>
      </li>
      <li class="flex gap-2">
        <span class="text-zinc-400 dark:text-zinc-500">•</span>
        <span>Google Cloud operations</span>
      </li>
      <li class="flex gap-2">
        <span class="text-zinc-400 dark:text-zinc-500">•</span>
        <span>Build caching and incremental builds</span>
      </li>
    </ul>
  </section>
</ProviderLayout>
