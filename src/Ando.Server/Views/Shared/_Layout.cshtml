@using Ando.Server.Models
@using Ando.Server.Services
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject IImpersonationService ImpersonationService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ando CI</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@@4"></script>
    <style type="text/tailwindcss">
        @@layer base {
            body {
                font-family: "Space Grotesk", "Segoe UI", sans-serif;
            }

            code, pre, .font-mono {
                font-family: "JetBrains Mono", ui-monospace, SFMono-Regular, Menlo, Consolas, monospace;
            }

            body {
                @@apply min-h-screen bg-gradient-to-br from-slate-50 via-white to-slate-100 text-slate-900 antialiased;
            }

            h1 { @@apply text-2xl font-semibold tracking-tight text-slate-900; }
            h2 { @@apply text-xl font-semibold tracking-tight text-slate-900; }
            h3 { @@apply text-lg font-semibold text-slate-900; }

            a { @@apply text-blue-600 hover:text-blue-700; }
            label { @@apply text-sm font-medium text-slate-700; }

            input[type="text"],
            input[type="email"],
            input[type="number"],
            input[type="password"],
            textarea,
            select {
                @@apply w-full rounded-md border border-slate-200 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500/20;
            }

            input[type="checkbox"] {
                @@apply h-4 w-4 rounded border-slate-300 text-blue-600 focus:ring-blue-500/30;
            }
        }

        @@layer components {
            .app-shell { @@apply flex min-h-screen flex-col; }
            header { @@apply sticky top-0 z-20 border-b border-slate-200 bg-white/90 backdrop-blur; }
            nav { @@apply mx-auto flex h-16 max-w-6xl items-center justify-between px-6; }
            .nav-brand a { @@apply text-lg font-semibold text-slate-900 no-underline; }
            .nav-links { @@apply flex items-center gap-1 text-sm; }
            .nav-link { @@apply px-3 py-2 rounded-md text-slate-600 no-underline transition-colors hover:text-slate-900 hover:bg-slate-100; }
            .nav-link-active { @@apply text-slate-900 bg-slate-100; }
            .nav-divider { @@apply h-6 w-px bg-slate-200 mx-2; }
            .nav-create { @@apply ml-2; }
            main { @@apply mx-auto w-full max-w-6xl flex-1 px-6 py-8; }
            footer { @@apply border-t border-slate-200 py-8 text-center text-xs text-slate-500; }

            .page-header { @@apply mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between; }
            .breadcrumb { @@apply text-sm text-slate-500; }
            .header-actions { @@apply flex flex-wrap gap-2; }
            .inline-form { @@apply inline; }

            .btn { @@apply inline-flex items-center justify-center gap-2 rounded-md border border-transparent px-3 py-1.5 text-sm font-medium transition focus:outline-none focus:ring-2 focus:ring-offset-2; }
            .btn-sm { @@apply px-2.5 py-1 text-xs; }
            .btn-primary { @@apply bg-emerald-600 text-white shadow-sm hover:bg-emerald-500 focus:ring-emerald-500; }
            .btn-secondary { @@apply border-slate-200 bg-white text-slate-700 hover:bg-slate-50 focus:ring-slate-400; }
            .btn-danger { @@apply bg-red-600 text-white hover:bg-red-500 focus:ring-red-500; }
            .btn:disabled { @@apply cursor-not-allowed opacity-50; }

            .alert { @@apply mb-4 rounded-lg border px-4 py-3 text-sm; }
            .alert-success { @@apply border-emerald-200 bg-emerald-50 text-emerald-700; }
            .alert-error { @@apply border-red-200 bg-red-50 text-red-700; }
            .alert-warning { @@apply border-amber-200 bg-amber-50 text-amber-800; }
            .alert strong { @@apply block mb-1 font-semibold; }
            .alert code { @@apply bg-white/50 px-1.5 py-0.5 rounded text-xs font-mono; }

            .dashboard { @@apply space-y-6; }
            .dashboard-stats { @@apply grid gap-4 sm:grid-cols-2 xl:grid-cols-4; }
            .stat-card { @@apply rounded-xl border border-slate-200 bg-white p-4 shadow-sm; }
            .stat-card h3 { @@apply text-xs font-medium uppercase tracking-wide text-slate-500; }
            .stat-value { @@apply mt-2 text-2xl font-semibold text-slate-900; }

            .recent-builds { @@apply mt-6 rounded-xl border border-slate-200 bg-white p-5 shadow-sm; }
            .section-header { @@apply mb-4 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between; }
            .section { @@apply mt-8 rounded-xl border border-slate-200 bg-white p-6 shadow-sm; }
            .section-description { @@apply text-sm text-slate-500; }

            .empty-state { @@apply mt-4 rounded-xl border border-dashed border-slate-200 bg-slate-50 px-6 py-8 text-center; }
            .empty-state h2, .empty-state h3 { @@apply text-base font-semibold; }
            .onboarding-checklist { @@apply inline-flex flex-col gap-2 text-left mt-4 mb-2; }
            .checklist-item { @@apply flex items-center gap-3 px-4 py-2 rounded-lg bg-white border border-slate-200; }
            .checklist-done { @@apply bg-emerald-50 border-emerald-200; }
            .checklist-done .checklist-number { @@apply bg-emerald-500 text-white; }
            .checklist-number { @@apply flex-shrink-0 w-6 h-6 rounded-full bg-slate-200 text-slate-600 flex items-center justify-center text-xs font-semibold; }
            .checklist-item code { @@apply bg-slate-100 px-1.5 py-0.5 rounded text-xs font-mono; }

            .builds-table { @@apply mt-4 w-full border-collapse text-sm; }
            .builds-table thead { @@apply text-left text-xs uppercase tracking-wide text-slate-500 sticky top-0 bg-white; }
            .builds-table th { @@apply pb-2 pt-2; }
            .builds-table td { @@apply border-t border-slate-100 py-3; }
            .builds-table tbody tr:nth-child(even) { @@apply bg-slate-50/50; }
            .build-row { @@apply cursor-pointer transition hover:bg-blue-50; }
            .build-row:focus-within { @@apply ring-2 ring-blue-500 ring-inset; }
            .build-view-link { @@apply text-blue-600 hover:text-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-1 rounded; }

            .status-badge { @@apply inline-flex items-center rounded-full border border-slate-200 bg-slate-100 px-2.5 py-0.5 text-[11px] font-semibold uppercase tracking-wide text-slate-600; }
            .status-queued { @@apply border-slate-200 bg-slate-100 text-slate-600; }
            .status-running { @@apply border-blue-200 bg-blue-50 text-blue-700; }
            .status-success { @@apply border-emerald-200 bg-emerald-50 text-emerald-700; }
            .status-failed, .status-timedout { @@apply border-red-200 bg-red-50 text-red-700; }
            .status-cancelled { @@apply border-amber-200 bg-amber-50 text-amber-700; }

            .quick-filters { @@apply flex flex-wrap items-center gap-2; }
            .filter-label { @@apply text-sm font-medium text-slate-600; }
            .filter-btn { @@apply inline-flex items-center gap-1.5 rounded-md border border-slate-200 bg-white px-3 py-1.5 text-sm text-slate-600 transition hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-blue-500; }
            .filter-btn-active { @@apply border-blue-200 bg-blue-50 text-blue-700; }
            .filter-btn-failed { @@apply border-red-200 text-red-600 hover:bg-red-50; }
            .filter-btn-failed.filter-btn-active { @@apply bg-red-50 text-red-700; }
            .filter-btn-running { @@apply border-blue-200 text-blue-600 hover:bg-blue-50; }
            .filter-count { @@apply rounded-full bg-slate-100 px-1.5 py-0.5 text-[10px] font-semibold; }
            .filter-btn-active .filter-count { @@apply bg-blue-100; }
            .filter-btn-failed .filter-count { @@apply bg-red-100; }

            .projects-grid, .repos-grid { @@apply grid gap-6 sm:grid-cols-2 xl:grid-cols-3; }
            .project-card, .repo-card { @@apply rounded-xl border border-slate-200 bg-white p-5 shadow-sm transition; }
            .project-card-failed, .project-card-timedout { @@apply border-l-4 border-l-red-500; }
            .project-card-running, .project-card-queued { @@apply border-l-4 border-l-blue-500; }
            .project-card-success { @@apply border-l-4 border-l-emerald-500; }
            .project-header, .repo-header { @@apply flex items-center justify-between gap-2; }
            .project-name { @@apply text-sm font-semibold text-slate-900; }
            .project-status-banner { @@apply mt-2 py-1; }
            .status-badge-lg { @@apply inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold uppercase tracking-wide; }
            .project-meta, .repo-meta { @@apply mt-2 flex flex-wrap gap-3 text-xs text-slate-600; }
            .project-actions, .repo-actions { @@apply mt-4 flex flex-wrap gap-2; }
            .repo-connected { @@apply border-emerald-200 bg-emerald-50; }
            .private-badge { @@apply rounded-full border border-slate-200 bg-slate-100 px-2 py-0.5 text-[11px] text-slate-600; }
            .connected-badge { @@apply rounded-full border border-emerald-200 bg-emerald-100 px-2.5 py-0.5 text-[11px] font-semibold text-emerald-700; }

            .status-controls { @@apply flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between; }
            .sort-controls { @@apply flex flex-col gap-3 sm:flex-row sm:items-center; }
            .sort-label { @@apply text-sm font-medium text-slate-600; }
            .sort-buttons { @@apply flex flex-wrap gap-2; }
            .sort-btn { @@apply rounded-md border border-slate-200 bg-white px-3 py-1.5 text-sm text-slate-600 no-underline transition hover:bg-slate-50 hover:text-slate-900; }
            .sort-btn-active { @@apply border-blue-200 bg-blue-50 text-blue-700 hover:bg-blue-100 hover:text-blue-800; }
            .filter-btn-success { @@apply border-emerald-200 text-emerald-600 hover:bg-emerald-50; }
            .filter-btn-success.filter-btn-active { @@apply bg-emerald-50 text-emerald-700; }
            .filter-btn-success .filter-count { @@apply bg-emerald-100; }
            .time-relative { @@apply cursor-help border-b border-dotted border-slate-400; }

            .status-grid { @@apply mt-6 grid gap-4 sm:grid-cols-2 xl:grid-cols-3; }
            .status-card { @@apply block rounded-xl border border-slate-200 bg-white p-4 shadow-sm transition hover:shadow-md hover:border-slate-300 cursor-pointer; }
            .status-card-deployed { @@apply border-emerald-200 hover:border-emerald-300; }
            .status-card-failed { @@apply border-red-200 hover:border-red-300; }
            .status-card-notdeployed { @@apply border-slate-200 hover:border-slate-300; }
            .status-card-header { @@apply flex items-start justify-between gap-2; }
            .status-card-name { @@apply text-sm font-semibold text-slate-900; }
            .status-card-meta { @@apply mt-3 flex flex-wrap gap-3 text-xs text-slate-500; }
            .status-card-footer { @@apply mt-3 pt-3 border-t border-slate-100; }
            .created-date { @@apply text-xs text-slate-400; }

            .deployment-badge { @@apply inline-flex items-center rounded-full px-2.5 py-0.5 text-[11px] font-semibold uppercase tracking-wide; }
            .deployment-deployed { @@apply border border-emerald-200 bg-emerald-50 text-emerald-700; }
            .deployment-failed { @@apply border border-red-200 bg-red-50 text-red-700; }
            .deployment-notdeployed { @@apply border border-slate-200 bg-slate-100 text-slate-600; }

            .project-info { @@apply mt-6 rounded-xl border border-slate-200 bg-white p-5 shadow-sm; }
            .info-grid { @@apply grid gap-4 sm:grid-cols-2 lg:grid-cols-3; }
            .info-item { @@apply flex flex-col gap-1; }
            .info-label { @@apply text-xs uppercase tracking-wide text-slate-500; }
            .info-value { @@apply text-sm font-medium text-slate-900; }
            .pr-badge { @@apply ml-2 rounded-full border border-blue-200 bg-blue-50 px-2 py-0.5 text-[11px] text-blue-700; }

            .unsaved-bar { @@apply fixed bottom-0 left-0 right-0 z-50 flex items-center justify-between gap-4 bg-amber-50 border-t border-amber-200 px-6 py-3 shadow-lg; }
            .unsaved-text { @@apply text-sm font-medium text-amber-800; }
            .unsaved-actions { @@apply flex items-center gap-2; }

            .settings-container { @@apply space-y-6 pb-20; }
            .settings-section { @@apply rounded-xl border border-slate-200 bg-white p-5 shadow-sm; }
            .form-group { @@apply mt-4; }
            .form-hint { @@apply mt-2 text-xs text-slate-500; }
            .form-actions { @@apply mt-6 flex items-center gap-3; }
            .checkbox-label { @@apply flex items-center gap-2 text-sm text-slate-700; }
            .secrets-table { @@apply mt-4 w-full border-collapse text-sm; }
            .secrets-table th { @@apply pb-2 text-left text-xs uppercase tracking-wide text-slate-500; }
            .secrets-table td { @@apply border-t border-slate-100 py-3; }
            .secrets-table td:first-child { @@apply flex items-center gap-2; }

            .detected-secrets { @@apply flex flex-wrap gap-2 mt-2; }
            .secret-tag { @@apply inline-flex items-center px-2.5 py-1 rounded-md bg-slate-100 text-slate-700 text-xs font-medium font-mono; }

            .btn-icon { @@apply inline-flex items-center justify-center p-1 rounded text-slate-400 hover:text-slate-600 hover:bg-slate-100 transition focus:outline-none focus:ring-2 focus:ring-blue-500; }
            .hidden { @@apply hidden; }
            .w-4 { @@apply w-4; }
            .h-4 { @@apply h-4; }

            .danger-zone { @@apply border-red-200; }
            .danger-item { @@apply flex flex-col gap-4 md:flex-row md:items-center md:justify-between; }
            .danger-info h3 { @@apply text-base font-semibold text-slate-900; }
            .danger-info p { @@apply text-sm text-slate-500; }

            .build-header { @@apply mt-6 rounded-xl border border-slate-200 bg-white p-5 shadow-sm; }
            .build-status-large { @@apply flex items-center gap-3; }
            .live-indicator { @@apply inline-flex items-center gap-2 rounded-full border border-emerald-200 bg-emerald-50 px-2.5 py-0.5 text-xs font-semibold text-emerald-700; }
            .live-dot { @@apply h-2 w-2 rounded-full bg-emerald-500 animate-pulse; }

            .steps-progress { @@apply mt-4; }
            .steps-progress-header { @@apply flex items-center justify-between mb-2; }
            .steps-progress-label { @@apply text-sm font-medium text-slate-700; }
            .steps-progress-count { @@apply text-sm text-slate-500; }
            .steps-progress-bar { @@apply h-2 w-full bg-slate-200 rounded-full overflow-hidden; }
            .steps-progress-fill { @@apply h-full bg-emerald-500 transition-all duration-300 ease-out; }
            .steps-progress-fill-failed { @@apply bg-red-500; }
            .steps-list { @@apply mt-3 space-y-1; }
            .step-item { @@apply flex items-center gap-2 text-sm py-1 px-2 rounded; }
            .step-item-current { @@apply bg-blue-50 text-blue-700; }
            .step-item-completed { @@apply text-emerald-600; }
            .step-item-failed { @@apply text-red-600 bg-red-50; }
            .step-item-pending { @@apply text-slate-400; }
            .step-icon { @@apply w-4 h-4 flex-shrink-0; }
            .build-info-grid { @@apply mt-4 grid gap-4 sm:grid-cols-2 lg:grid-cols-3; }
            .commit-sha { @@apply rounded bg-slate-100 px-2 py-0.5 font-mono text-xs text-slate-700; }
            .branch-name { @@apply rounded bg-slate-100 px-2 py-0.5 text-xs text-slate-700; }
            .commit-message { @@apply text-sm text-slate-600; }
            .failed-count { @@apply ml-2 text-xs text-red-600; }
            .error-message { @@apply mt-4 rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-700; }
            .error-message pre { @@apply mt-2 whitespace-pre-wrap font-mono text-xs; }

            .artifacts-list { @@apply mt-3 space-y-2; }
            .artifact-item { @@apply flex flex-col gap-2 rounded-lg border border-slate-200 bg-slate-50 px-4 py-3 sm:flex-row sm:items-center sm:justify-between; }
            .artifact-name { @@apply text-sm font-medium text-slate-900; }
            .artifact-size { @@apply text-xs text-slate-500; }

            .log-tools { @@apply flex flex-wrap items-center gap-2; }
            .log-search-input { @@apply w-48 rounded-md border border-slate-200 bg-white px-3 py-1.5 text-sm; }
            .log-container { @@apply mt-4 rounded-xl border border-slate-900/10 bg-slate-950 p-4 text-slate-100 shadow-inner max-h-[600px] overflow-y-auto; }
            .log-entries { }
            .log-entry { @@apply flex flex-wrap gap-2 px-2 py-0 text-xs font-mono leading-5; }
            .log-time { @@apply text-slate-400; }
            .log-step { @@apply text-blue-300; }
            .log-message { @@apply text-slate-100 whitespace-pre-wrap; }
            /* ANSI color classes */
            .ansi-bold { @@apply font-bold; }
            .ansi-dim { @@apply opacity-60; }
            .ansi-black { @@apply text-slate-800; }
            .ansi-red { @@apply text-red-400; }
            .ansi-green { @@apply text-emerald-400; }
            .ansi-yellow { @@apply text-yellow-400; }
            .ansi-blue { @@apply text-blue-400; }
            .ansi-magenta { @@apply text-fuchsia-400; }
            .ansi-cyan { @@apply text-cyan-400; }
            .ansi-white { @@apply text-slate-100; }
            .ansi-bright-black { @@apply text-slate-500; }
            .ansi-bright-red { @@apply text-red-300; }
            .ansi-bright-green { @@apply text-emerald-300; }
            .ansi-bright-yellow { @@apply text-yellow-300; }
            .ansi-bright-blue { @@apply text-blue-300; }
            .ansi-bright-magenta { @@apply text-fuchsia-300; }
            .ansi-bright-cyan { @@apply text-cyan-300; }
            .ansi-bright-white { @@apply text-white; }
            .log-stepstarted { @@apply text-blue-300; }
            .log-stepcompleted { @@apply text-emerald-300; }
            .log-stepfailed { @@apply text-red-300; }
            .log-error { @@apply bg-red-950/40 text-red-200; }
            .log-warning { @@apply text-amber-300; }
            .log-placeholder { @@apply text-sm text-slate-400; }

            .login-page { @@apply flex min-h-[60vh] items-center justify-center; }
            .login-box { @@apply w-full max-w-md rounded-xl border border-slate-200 bg-white p-6 text-center shadow-sm; }
            .login-box h1 { @@apply text-xl font-semibold; }

            .error-page { @@apply mx-auto mt-10 max-w-md rounded-xl border border-slate-200 bg-white p-6 text-center shadow-sm; }

            .text-muted { @@apply text-slate-600; }
            .text-success { @@apply text-emerald-600; }
            .text-warning { @@apply text-amber-600; }
            .text-error { @@apply text-red-600; }

            /* Focus states for interactive elements */
            a:focus-visible { @@apply outline-none ring-2 ring-blue-500 ring-offset-2 rounded; }
            .nav-link:focus-visible { @@apply ring-offset-0; }
            .status-card:focus-visible { @@apply ring-2 ring-blue-500 ring-offset-2; }
            .project-card:focus-within { @@apply ring-2 ring-blue-500; }

            /* Accessibility utilities */
            .sr-only { @@apply absolute w-px h-px p-0 -m-px overflow-hidden whitespace-nowrap border-0; clip: rect(0, 0, 0, 0); }
        }
    </style>
</head>
<body class="app-shell">
    <header>
        <nav>
            <div class="nav-brand">
                <a href="/">Ando CI</a>
            </div>
            @if (User.Identity?.IsAuthenticated == true)
            {
                var currentPath = Context.Request.Path.Value?.ToLower() ?? "";
                var isAdmin = User.IsInRole(UserRoles.Admin);
                <div class="nav-links">
                    <a href="/projects" class="nav-link @(currentPath.StartsWith("/projects") && !currentPath.Contains("/status") ? "nav-link-active" : "")">Projects</a>
                    <a href="/projects/status" class="nav-link @(currentPath.Contains("/status") ? "nav-link-active" : "")">Status</a>
                    @if (isAdmin)
                    {
                        <a href="/admin" class="nav-link @(currentPath.StartsWith("/admin") ? "nav-link-active" : "")">Admin</a>
                    }
                    <div class="nav-divider"></div>
                    <a href="/auth/logout" class="nav-link">Logout</a>
                    <a href="/projects/create" class="btn btn-primary btn-sm nav-create">New Project</a>
                </div>
            }
        </nav>
    </header>

    @if (ImpersonationService.IsImpersonating)
    {
        var impersonatedUser = await UserManager.GetUserAsync(User);
        <div class="bg-purple-600 text-white px-4 py-3">
            <div class="mx-auto max-w-6xl flex items-center justify-between gap-4">
                <div class="flex items-center gap-3 text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                    </svg>
                    <span>
                        <strong>Impersonation Mode:</strong> You are viewing as <strong>@impersonatedUser?.Email</strong>
                    </span>
                </div>
                <form method="post" action="/admin/stop-impersonation" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="inline-flex items-center gap-2 rounded-md bg-white/20 px-3 py-1.5 text-sm font-medium hover:bg-white/30 transition">
                        Stop Impersonating
                    </button>
                </form>
            </div>
        </div>
    }
    else if (User.Identity?.IsAuthenticated == true)
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null && !currentUser.EmailVerified)
        {
            <div class="bg-amber-50 border-b border-amber-200 px-4 py-3">
                <div class="mx-auto max-w-6xl flex items-center justify-between gap-4">
                    <div class="flex items-center gap-3 text-sm text-amber-800">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <span>Please verify your email address. Check your inbox for a verification link.</span>
                    </div>
                    <form method="post" action="/auth/resend-verification" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="text-sm font-medium text-amber-800 hover:text-amber-900 underline">
                            Resend email
                        </button>
                    </form>
                </div>
            </div>
        }
    }

    <main>
        @if (TempData["GlobalSuccess"] != null)
        {
            <div class="alert alert-success">
                @TempData["GlobalSuccess"]
            </div>
        }
        @if (TempData["GlobalError"] != null)
        {
            <div class="alert alert-error">
                @TempData["GlobalError"]
            </div>
        }
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year Ando CI</p>
    </footer>

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
