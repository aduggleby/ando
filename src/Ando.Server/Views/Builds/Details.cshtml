@model Ando.Server.ViewModels.BuildDetailsViewModel
@{
    ViewData["Title"] = $"Build #{Model.Id}";
}

<div class="page-header">
    <div class="breadcrumb">
        <a href="/projects">Projects</a> /
        <a href="/projects/@Model.ProjectId">@Model.ProjectName</a> /
        <span>Build #@Model.Id</span>
    </div>
    <div class="header-actions">
        @if (Model.CanCancel)
        {
            <form method="post" action="/builds/@Model.Id/cancel" class="inline-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Cancel Build</button>
            </form>
        }
        @if (Model.CanRetry)
        {
            <form method="post" action="/builds/@Model.Id/retry" class="inline-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary">Retry Build</button>
            </form>
        }
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-error">@TempData["Error"]</div>
}

<div class="build-header">
    <div class="build-status-large">
        <span id="build-status" class="status-badge status-@Model.Status.ToString().ToLower()">
            @Model.Status
        </span>
        @if (Model.IsLive)
        {
            <span class="live-indicator" id="live-indicator">
                <span class="live-dot"></span>
                Live
            </span>
        }
    </div>

    <div class="build-info-grid">
        <div class="info-item">
            <span class="info-label">Commit</span>
                    <span class="info-value">
                        <code class="commit-sha">@Model.ShortCommitSha</code>
                        @if (!string.IsNullOrEmpty(Model.CommitMessage))
                        {
                            <span class="commit-message ml-2">@Model.CommitMessage</span>
                        }
                    </span>
        </div>
        <div class="info-item">
            <span class="info-label">Branch</span>
            <span class="info-value">
                <span class="branch-name">@Model.Branch</span>
                @if (Model.PullRequestNumber.HasValue)
                {
                    <a href="@Model.ProjectUrl/pull/@Model.PullRequestNumber" target="_blank" class="pr-link">
                        PR #@Model.PullRequestNumber
                    </a>
                }
            </span>
        </div>
        <div class="info-item">
            <span class="info-label">Author</span>
            <span class="info-value">@(Model.CommitAuthor ?? "Unknown")</span>
        </div>
        <div class="info-item">
            <span class="info-label">Trigger</span>
            <span class="info-value">@Model.Trigger</span>
        </div>
        <div class="info-item">
            <span class="info-label">Queued</span>
            <span class="info-value">@Model.QueuedAt.ToString("MMM d, yyyy HH:mm:ss")</span>
        </div>
        @if (Model.StartedAt.HasValue)
        {
            <div class="info-item">
                <span class="info-label">Started</span>
                <span class="info-value">@Model.StartedAt.Value.ToString("MMM d, yyyy HH:mm:ss")</span>
            </div>
        }
        @if (Model.FinishedAt.HasValue)
        {
            <div class="info-item">
                <span class="info-label">Finished</span>
                <span class="info-value">@Model.FinishedAt.Value.ToString("MMM d, yyyy HH:mm:ss")</span>
            </div>
        }
        <div class="info-item">
            <span class="info-label">Duration</span>
            <span class="info-value" id="build-duration">@FormatDuration(Model.Duration)</span>
        </div>
    </div>

    @if (Model.StepsTotal > 0)
    {
        var progressPercent = (int)((double)Model.StepsCompleted / Model.StepsTotal * 100);
        var hasFailed = Model.StepsFailed > 0;
        <div class="steps-progress" id="steps-progress">
            <div class="steps-progress-header">
                <span class="steps-progress-label">Build Progress</span>
                <span class="steps-progress-count" id="steps-count">
                    @Model.StepsCompleted / @Model.StepsTotal steps
                    @if (hasFailed)
                    {
                        <span class="text-error">(@Model.StepsFailed failed)</span>
                    }
                </span>
            </div>
            <div class="steps-progress-bar">
                <div class="steps-progress-fill @(hasFailed ? "steps-progress-fill-failed" : "")"
                     id="steps-progress-fill"
                     style="width: @(progressPercent)%"></div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="error-message">
            <h3>Error</h3>
            <pre>@Model.ErrorMessage</pre>
        </div>
    }
</div>

<!-- Artifacts -->
@if (Model.Artifacts.Count > 0)
{
    <div class="section">
        <h2>Artifacts</h2>
        <div class="artifacts-list">
            @foreach (var artifact in Model.Artifacts)
            {
                <div class="artifact-item">
                    <span class="artifact-name">@artifact.Name</span>
                    <span class="artifact-size">@artifact.FormattedSize</span>
                    <a href="/builds/@Model.Id/artifacts/@artifact.Id" class="btn btn-sm">Download</a>
                </div>
            }
        </div>
    </div>
}

<!-- Build Logs -->
<div class="section">
    <div class="section-header">
        <h2>Build Logs</h2>
        <div class="log-tools">
            <input type="text" id="log-search" placeholder="Search logs..." class="log-search-input"
                   oninput="filterLogs(this.value)" />
            <button type="button" class="btn btn-sm btn-secondary" onclick="jumpToFirstError()">
                Jump to Error
            </button>
            <button type="button" id="copy-logs-btn" class="btn btn-sm btn-secondary" onclick="copyLogs()">
                Copy Logs
            </button>
            @if (Model.IsLive)
            {
                <button id="scroll-toggle" class="btn btn-sm btn-secondary" onclick="toggleAutoScroll()">
                    Auto-scroll: On
                </button>
            }
        </div>
    </div>

    <div class="log-container" id="log-container">
        <div class="log-entries" id="log-entries">
            @foreach (var entry in Model.LogEntries)
            {
                <div class="log-entry log-@entry.Type.ToLower()" data-sequence="@entry.Sequence">
                    <span class="log-time">@entry.Timestamp.ToString("HH:mm:ss.fff")</span>
                    @if (!string.IsNullOrEmpty(entry.StepName))
                    {
                        <span class="log-step">[@entry.StepName]</span>
                    }
                    <span class="log-message">@entry.Message</span>
                </div>
            }
        </div>
        @if (Model.LogEntries.Count == 0 && Model.IsLive)
        {
            <div class="log-placeholder" id="log-placeholder">
                Waiting for logs...
            </div>
        }
    </div>
</div>

@section Scripts {
    @if (Model.IsLive)
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
        <script src="/js/build-logs.js"></script>
        <script>
            initializeBuildLogs(@Model.Id, @Model.LogEntries.LastOrDefault()?.Sequence ?? 0, {
                stepsTotal: @Model.StepsTotal,
                stepsCompleted: @Model.StepsCompleted,
                stepsFailed: @Model.StepsFailed
            });
        </script>
    }
}

@functions {
    string FormatDuration(TimeSpan? duration)
    {
        if (!duration.HasValue) return "-";

        var d = duration.Value;
        if (d.TotalSeconds < 60) return $"{d.Seconds}s";
        if (d.TotalMinutes < 60) return $"{d.Minutes}m {d.Seconds}s";
        return $"{(int)d.TotalHours}h {d.Minutes}m";
    }
}
