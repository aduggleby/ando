@model Ando.Server.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-lg">
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-slate-100 text-slate-600 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-slate-900">Create new password</h1>
                <p class="text-slate-500 mt-2">Enter a new password for your account</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-error mb-6">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post" asp-action="ResetPassword" asp-controller="Auth" class="space-y-5">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Token" />

                <div>
                    <label asp-for="Password" class="block mb-2">New password</label>
                    <input type="password" asp-for="Password"
                           class="w-full"
                           placeholder="At least 8 characters"
                           autocomplete="new-password"
                           autofocus />
                    <span asp-validation-for="Password" class="text-xs text-red-600 mt-1"></span>
                    <p class="text-xs text-slate-500 mt-1">Must include uppercase, lowercase, and a number</p>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block mb-2">Confirm new password</label>
                    <input type="password" asp-for="ConfirmPassword"
                           class="w-full"
                           placeholder="Re-enter your password"
                           autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-xs text-red-600 mt-1"></span>
                </div>

                <button type="submit" class="btn btn-primary w-full py-2.5">
                    Reset password
                </button>
            </form>
        </div>
    </div>
</div>
