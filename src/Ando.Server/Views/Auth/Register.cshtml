@model Ando.Server.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-lg">
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-emerald-100 text-emerald-600 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-slate-900">Create your account</h1>
                <p class="text-slate-500 mt-2">Get started with Ando CI</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-error mb-6">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post" asp-action="Register" asp-controller="Auth" class="space-y-5">
                @Html.AntiForgeryToken()

                <div>
                    <label asp-for="Email" class="block mb-2">Email address</label>
                    <input type="email" asp-for="Email"
                           class="w-full"
                           placeholder="you@example.com"
                           autocomplete="email"
                           autofocus />
                    <span asp-validation-for="Email" class="text-xs text-red-600 mt-1"></span>
                </div>

                <div>
                    <label asp-for="DisplayName" class="block mb-2">Display name <span class="text-slate-400">(optional)</span></label>
                    <input type="text" asp-for="DisplayName"
                           class="w-full"
                           placeholder="John Doe"
                           autocomplete="name" />
                    <span asp-validation-for="DisplayName" class="text-xs text-red-600 mt-1"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block mb-2">Password</label>
                    <input type="password" asp-for="Password"
                           class="w-full"
                           placeholder="At least 8 characters"
                           autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-xs text-red-600 mt-1"></span>
                    <p class="text-xs text-slate-500 mt-1">Must include uppercase, lowercase, and a number</p>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block mb-2">Confirm password</label>
                    <input type="password" asp-for="ConfirmPassword"
                           class="w-full"
                           placeholder="Re-enter your password"
                           autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-xs text-red-600 mt-1"></span>
                </div>

                <button type="submit" class="btn btn-primary w-full py-2.5">
                    Create account
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-slate-500">
                Already have an account?
                <a href="/auth/login" class="text-blue-600 hover:text-blue-700 font-medium">Sign in</a>
            </div>
        </div>
    </div>
</div>
