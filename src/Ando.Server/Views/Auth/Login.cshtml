@model Ando.Server.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-lg">
            <div class="text-center mb-8">
                <div class="mb-4">
                    <img src="~/images/ando_logo.png" alt="Ando Server logo" class="w-16 h-16 object-contain" />
                </div>
                <h1 class="text-2xl font-bold text-slate-900">Welcome back</h1>
                <p class="text-slate-500 mt-2">Sign in to your Ando CI account</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-error mb-6">
                    @Model.ErrorMessage
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mb-6">
                    @TempData["Success"]
                </div>
            }

            <form method="post" asp-action="Login" asp-controller="Auth" class="space-y-5">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />

                <div>
                    <label asp-for="Email" class="block mb-2">Email address</label>
                    <input type="email" asp-for="Email"
                           class="w-full"
                           placeholder="you@example.com"
                           autocomplete="email"
                           autofocus />
                    <span asp-validation-for="Email" class="text-xs text-red-600 mt-1"></span>
                </div>

                <div>
                    <div class="flex items-center justify-between mb-2">
                        <label asp-for="Password">Password</label>
                        <a href="/auth/forgot-password" class="text-sm text-blue-600 hover:text-blue-700">Forgot password?</a>
                    </div>
                    <input type="password" asp-for="Password"
                           class="w-full"
                           placeholder="Enter your password"
                           autocomplete="current-password" />
                    <span asp-validation-for="Password" class="text-xs text-red-600 mt-1"></span>
                </div>

                <div class="flex items-center">
                    <input type="checkbox" asp-for="RememberMe" class="mr-2" />
                    <label asp-for="RememberMe" class="text-sm text-slate-600 cursor-pointer">Remember me for 30 days</label>
                </div>

                <button type="submit" class="btn btn-primary w-full py-2.5">
                    Sign in
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-slate-500">
                Don't have an account?
                <a href="/auth/register" class="text-blue-600 hover:text-blue-700 font-medium">Create one</a>
            </div>
        </div>
    </div>
</div>
