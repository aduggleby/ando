@model Ando.Server.ViewModels.RegisterSuccessViewModel
@{
    ViewData["Title"] = "Welcome";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-lg text-center">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-emerald-100 text-emerald-600 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
            </div>

            <h1 class="text-2xl font-bold text-slate-900 mb-2">Welcome to Ando CI!</h1>

            @if (Model.IsFirstUser)
            {
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-amber-100 text-amber-700 text-sm font-medium mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                    You are the administrator
                </div>
                <p class="text-slate-500 mb-6">
                    As the first user, you have full admin access.
                    You can manage all users, projects, and system settings.
                </p>
            }
            else
            {
                <p class="text-slate-500 mb-6">
                    Your account has been created successfully.
                </p>
            }

            <div class="bg-slate-50 rounded-lg p-4 mb-6">
                <p class="text-sm text-slate-600">
                    We sent a verification email to <strong class="text-slate-900">@Model.Email</strong>.
                    Please check your inbox and click the link to verify your email address.
                </p>
            </div>

            <a href="/" class="btn btn-primary w-full py-2.5">
                Go to Dashboard
            </a>
        </div>
    </div>
</div>
