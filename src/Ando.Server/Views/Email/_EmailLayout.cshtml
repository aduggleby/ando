@* =============================================================================
   _EmailLayout.cshtml

   Base layout for all email templates. Provides consistent styling and
   structure across all email notifications.
   ============================================================================= *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ando CI</title>
    <style>
        /* Reset */
        body, p, h1, h2, h3, table, td {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;
            font-size: 14px;
            line-height: 1.5;
            color: #24292f;
            background-color: #f6f8fa;
        }

        .email-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .email-header {
            background-color: #24292f;
            color: white;
            padding: 24px;
            border-radius: 6px 6px 0 0;
        }

        .email-header h1 {
            font-size: 20px;
            font-weight: 600;
            margin: 0;
        }

        .email-body {
            background-color: #ffffff;
            padding: 24px;
            border: 1px solid #d0d7de;
            border-top: none;
            border-radius: 0 0 6px 6px;
        }

        .status-failed {
            color: #cf222e;
            font-weight: 600;
        }

        .status-success {
            color: #1a7f37;
            font-weight: 600;
        }

        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin: 16px 0;
        }

        .info-table td {
            padding: 8px 0;
            border-bottom: 1px solid #d0d7de;
        }

        .info-table td:first-child {
            color: #57606a;
            width: 120px;
        }

        .error-box {
            background-color: #ffebe9;
            border: 1px solid #ff8182;
            border-radius: 6px;
            padding: 12px;
            margin: 16px 0;
            color: #cf222e;
        }

        .btn {
            display: inline-block;
            padding: 12px 24px;
            font-size: 14px;
            font-weight: 500;
            text-decoration: none;
            border-radius: 6px;
            margin-top: 16px;
        }

        .btn-primary {
            background-color: #1f883d;
            color: white;
        }

        .email-footer {
            text-align: center;
            padding: 24px;
            color: #57606a;
            font-size: 12px;
        }

        .commit-sha {
            font-family: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas, monospace;
            background-color: #f6f8fa;
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            <h1>Ando CI</h1>
        </div>
        <div class="email-body">
            @RenderBody()
        </div>
        <div class="email-footer">
            <p>This is an automated message from Ando CI.</p>
            <p>You're receiving this because you're configured to receive build notifications.</p>
        </div>
    </div>
</body>
</html>
