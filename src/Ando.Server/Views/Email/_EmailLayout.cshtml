@* =============================================================================
   _EmailLayout.cshtml

   Base layout for all email templates. Provides consistent styling and
   structure across all email notifications.
   ============================================================================= *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ando CI</title>
    <style>
        :root {
            --ink: #18212f;
            --muted: #5c6676;
            --paper: #fcfcfa;
            --shell: #f1f4f8;
            --line: #d4dde8;
            --brand: #0f7c7a;
            --danger: #b92d3f;
            --danger-soft: #fff1f3;
            --chip: #e9eef5;
        }

        body, p, h1, h2, h3, table, td, div, span {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: "Trebuchet MS", "Segoe UI", "Noto Sans", sans-serif;
            font-size: 14px;
            line-height: 1.55;
            color: var(--ink);
            background-color: var(--shell);
        }

        .email-container {
            max-width: 680px;
            margin: 0 auto;
            padding: 20px 14px 28px;
        }

        .email-header {
            background: linear-gradient(135deg, #09131f 0%, #16324f 50%, #0f7c7a 100%);
            color: white;
            padding: 20px 22px;
            border-radius: 14px 14px 0 0;
        }

        .email-header h1 {
            font-size: 22px;
            font-family: Georgia, "Times New Roman", serif;
            font-weight: 700;
            letter-spacing: 0.2px;
            margin: 0;
        }

        .email-header p {
            margin-top: 4px;
            font-size: 12px;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            opacity: 0.88;
        }

        .email-body {
            background-color: var(--paper);
            padding: 24px;
            border: 1px solid var(--line);
            border-top: none;
            border-radius: 0 0 14px 14px;
        }

        .status-failed {
            color: var(--danger);
            font-family: Georgia, "Times New Roman", serif;
            font-size: 26px;
            line-height: 1.2;
            margin-bottom: 12px;
        }

        .status-success {
            color: #176d47;
            font-family: Georgia, "Times New Roman", serif;
            font-size: 24px;
        }

        .lede {
            color: var(--muted);
            margin-bottom: 16px;
        }

        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
            background: #ffffff;
            border: 1px solid var(--line);
            border-radius: 10px;
            overflow: hidden;
        }

        .info-table td {
            padding: 9px 12px;
            border-bottom: 1px solid var(--line);
            vertical-align: top;
        }

        .info-table td:first-child {
            color: var(--muted);
            width: 138px;
            background: #f7f9fc;
            font-weight: 700;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }

        .info-table tr:last-child td {
            border-bottom: none;
        }

        .panel {
            margin-top: 16px;
            border: 1px solid var(--line);
            border-radius: 10px;
            background: #fff;
            overflow: hidden;
        }

        .panel-title {
            padding: 10px 12px;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.35px;
            color: var(--muted);
            background: #f7f9fc;
            border-bottom: 1px solid var(--line);
        }

        .error-box {
            background-color: var(--danger-soft);
            border: 1px solid #f2b6c0;
            border-radius: 10px;
            padding: 12px 13px;
            margin-top: 16px;
            color: #8e1f30;
            white-space: pre-wrap;
            word-break: break-word;
        }

        .logs-box {
            margin-top: 16px;
            padding: 12px;
            border: 1px solid #1a283a;
            border-radius: 10px;
            background: #0f1824;
            color: #d1e2ff;
            font-family: Consolas, "SFMono-Regular", Menlo, monospace;
            font-size: 12px;
            line-height: 1.45;
            white-space: pre-wrap;
            word-break: break-word;
            max-height: 420px;
            overflow: hidden;
        }

        .btn {
            display: inline-block;
            padding: 11px 20px;
            font-size: 14px;
            font-weight: 700;
            text-decoration: none;
            border-radius: 8px;
            margin-top: 16px;
            letter-spacing: 0.2px;
        }

        .btn-primary {
            background-color: var(--brand);
            color: white;
        }

        .meta-chip {
            display: inline-block;
            margin: 0 6px 8px 0;
            padding: 5px 9px;
            border-radius: 999px;
            background: var(--chip);
            color: #2d3b4f;
            font-size: 12px;
            font-weight: 700;
        }

        .email-footer {
            text-align: center;
            padding: 14px 18px 0;
            color: var(--muted);
            font-size: 12px;
        }

        .commit-sha {
            font-family: Consolas, "SFMono-Regular", Menlo, monospace;
            background-color: #eef3f9;
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 12px;
            border: 1px solid #d3dde9;
        }

        .small-muted {
            color: var(--muted);
            font-size: 12px;
            margin-top: 6px;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            <h1>Ando CI</h1>
            <p>Build Incident Report</p>
        </div>
        <div class="email-body">
            @RenderBody()
        </div>
        <div class="email-footer">
            <p>This is an automated message from Ando CI.</p>
            <p>You're receiving this because you're configured to receive build notifications.</p>
        </div>
    </div>
</body>
</html>
