@model Ando.Server.ViewModels.LockUserViewModel
@{
    ViewData["Title"] = Model.IsCurrentlyLocked ? "Manage Account Lock" : "Lock Account";
    Layout = "_Layout";
}

<div class="min-h-[60vh] flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-lg">
            <div class="text-center mb-8">
                @if (Model.IsCurrentlyLocked)
                {
                    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 text-red-600 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <h1 class="text-2xl font-bold text-slate-900">Account Locked</h1>
                }
                else
                {
                    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-amber-100 text-amber-600 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <h1 class="text-2xl font-bold text-slate-900">Lock Account</h1>
                }
                <p class="text-slate-500 mt-2">@Model.Email</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-error mb-6">
                    <ul class="list-disc pl-4">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            @if (Model.IsCurrentlyLocked)
            {
                <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200">
                    <p class="text-red-800">
                        This account is currently locked until
                        <strong>@Model.CurrentLockoutEnd?.ToString("MMMM d, yyyy h:mm tt")</strong>
                    </p>
                </div>

                <form method="post" class="space-y-5">
                    @Html.AntiForgeryToken()

                    <button type="submit" name="action" value="unlock" class="btn btn-primary w-full justify-center">
                        Unlock Account Now
                    </button>

                    <a href="/admin/users/@Model.UserId" class="btn btn-secondary w-full justify-center">
                        Back to User
                    </a>
                </form>
            }
            else
            {
                <p class="text-slate-600 mb-6">
                    Locking this account will prevent the user from logging in.
                    They will see a message that their account has been locked.
                </p>

                <form method="post" class="space-y-5">
                    @Html.AntiForgeryToken()

                    <div>
                        <label asp-for="LockDays" class="block mb-2">Lock Duration (days)</label>
                        <input type="number" asp-for="LockDays" min="1" max="365" class="w-full" />
                        <span asp-validation-for="LockDays" class="text-xs text-red-600 mt-1"></span>
                        <p class="text-xs text-slate-500 mt-1">Account will be automatically unlocked after this period</p>
                    </div>

                    <div class="flex gap-3 pt-4">
                        <a href="/admin/users/@Model.UserId" class="btn btn-secondary flex-1 justify-center">
                            Cancel
                        </a>
                        <button type="submit" name="action" value="lock" class="btn flex-1 justify-center bg-red-600 hover:bg-red-700 text-white">
                            Lock Account
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
