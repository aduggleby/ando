@model Ando.Server.ViewModels.ChangeUserRoleViewModel
@{
    ViewData["Title"] = "Change User Role";
    Layout = "_Layout";
}

<div class="min-h-[60vh] flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-lg">
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-purple-100 text-purple-600 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-slate-900">Change User Role</h1>
                <p class="text-slate-500 mt-2">@Model.Email</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-error mb-6">
                    <ul class="list-disc pl-4">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form method="post" class="space-y-5">
                @Html.AntiForgeryToken()

                <div>
                    <label class="block mb-2">Current Role</label>
                    <div class="px-4 py-3 rounded-lg bg-slate-100 text-slate-700 font-medium">
                        @Model.CurrentRole
                    </div>
                </div>

                <div>
                    <label asp-for="NewRole" class="block mb-2">New Role</label>
                    <select asp-for="NewRole" asp-items="@(new SelectList(Model.AvailableRoles))" class="w-full">
                    </select>
                    <span asp-validation-for="NewRole" class="text-xs text-red-600 mt-1"></span>
                </div>

                <div class="flex gap-3 pt-4">
                    <a href="/admin/users/@Model.UserId" class="btn btn-secondary flex-1 justify-center">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary flex-1 justify-center">
                        Update Role
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
