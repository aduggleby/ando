@model Ando.Server.ViewModels.DeleteUserViewModel
@{
    ViewData["Title"] = "Delete User";
    Layout = "_Layout";
}

<div class="min-h-[60vh] flex items-center justify-center">
    <div class="w-full max-w-md">
        <div class="rounded-2xl border border-red-200 bg-white p-8 shadow-lg">
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 text-red-600 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-slate-900">Delete User</h1>
                <p class="text-slate-500 mt-2">@Model.DisplayName</p>
            </div>

            <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200">
                <p class="text-red-800 font-medium mb-2">This action cannot be undone!</p>
                <p class="text-red-700 text-sm">
                    Deleting this user will permanently remove:
                </p>
                <ul class="text-red-700 text-sm list-disc pl-4 mt-2">
                    <li>The user account and profile</li>
                    <li>@Model.ProjectCount project(s)</li>
                    <li>@Model.BuildCount build(s) and their artifacts</li>
                </ul>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-error mb-6">
                    <ul class="list-disc pl-4">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form method="post" class="space-y-5">
                @Html.AntiForgeryToken()

                <div>
                    <label asp-for="ConfirmEmail" class="block mb-2">
                        Type <strong>@Model.Email</strong> to confirm
                    </label>
                    <input type="email" asp-for="ConfirmEmail"
                           class="w-full"
                           placeholder="Enter email address"
                           autocomplete="off" />
                    <span asp-validation-for="ConfirmEmail" class="text-xs text-red-600 mt-1"></span>
                </div>

                <div class="flex gap-3 pt-4">
                    <a href="/admin/users/@Model.UserId" class="btn btn-secondary flex-1 justify-center">
                        Cancel
                    </a>
                    <button type="submit" class="btn flex-1 justify-center bg-red-600 hover:bg-red-700 text-white">
                        Delete Permanently
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
