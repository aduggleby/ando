@model Ando.Server.ViewModels.UserListViewModel
@{
    ViewData["Title"] = "Manage Users";
    Layout = "_Layout";
}

<div class="dashboard">
    <div class="page-header">
        <h1>Manage Users</h1>
        <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mb-4">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error mb-4">
            @TempData["Error"]
        </div>
    }

    <div class="rounded-lg border border-slate-200 bg-white p-4 mb-6">
        <form method="get" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-[200px]">
                <label class="block mb-2 text-sm">Search</label>
                <input type="text" name="search" value="@Model.SearchQuery"
                       placeholder="Search by email or name..."
                       class="w-full" />
            </div>
            <div class="w-40">
                <label class="block mb-2 text-sm">Role</label>
                <select name="role" class="w-full">
                    <option value="">All roles</option>
                    <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Admin</option>
                    <option value="User" selected="@(Model.RoleFilter == "User")">User</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
            @if (!string.IsNullOrEmpty(Model.SearchQuery) || !string.IsNullOrEmpty(Model.RoleFilter))
            {
                <a href="/admin/users" class="btn btn-secondary">Clear</a>
            }
        </form>
    </div>

    <div class="text-sm text-slate-500 mb-4">
        Showing @Model.Users.Count of @Model.TotalUsers users
    </div>

    @if (Model.Users.Count == 0)
    {
        <div class="empty-state">
            <p>No users found matching your criteria.</p>
        </div>
    }
    else
    {
        <div class="rounded-lg border border-slate-200 bg-white overflow-hidden">
            <table class="builds-table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>GitHub</th>
                        <th>Projects</th>
                        <th>Joined</th>
                        <th>Last Login</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr class="build-row" onclick="window.location='/admin/users/@user.Id'">
                            <td>
                                <div class="font-medium">@user.DisplayName</div>
                                <div class="text-xs text-slate-500">@user.Email</div>
                            </td>
                            <td>
                                @if (user.IsAdmin)
                                {
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                                        Admin
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-slate-100 text-slate-700">
                                        User
                                    </span>
                                }
                            </td>
                            <td>
                                @if (user.IsLockedOut)
                                {
                                    <span class="status-badge status-failed">Locked</span>
                                }
                                else if (user.EmailVerified)
                                {
                                    <span class="status-badge status-success">Verified</span>
                                }
                                else
                                {
                                    <span class="status-badge status-pending">Pending</span>
                                }
                            </td>
                            <td>
                                @if (user.HasGitHubConnection)
                                {
                                    <span class="text-emerald-600">Connected</span>
                                }
                                else
                                {
                                    <span class="text-slate-400">-</span>
                                }
                            </td>
                            <td>@user.ProjectCount</td>
                            <td>@FormatDate(user.CreatedAt)</td>
                            <td>@FormatDate(user.LastLoginAt)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="flex justify-center gap-2 mt-6">
                @if (Model.CurrentPage > 1)
                {
                    <a href="@GetPageUrl(Model.CurrentPage - 1)" class="btn btn-secondary btn-sm">Previous</a>
                }

                @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <span class="btn btn-primary btn-sm">@i</span>
                    }
                    else
                    {
                        <a href="@GetPageUrl(i)" class="btn btn-secondary btn-sm">@i</a>
                    }
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <a href="@GetPageUrl(Model.CurrentPage + 1)" class="btn btn-secondary btn-sm">Next</a>
                }
            </div>
        }
    }
</div>

@functions {
    string FormatDate(DateTime? date)
    {
        if (!date.HasValue) return "-";
        var diff = DateTime.UtcNow - date.Value;
        if (diff.TotalDays < 1) return "Today";
        if (diff.TotalDays < 7) return $"{(int)diff.TotalDays}d ago";
        return date.Value.ToString("MMM d, yyyy");
    }

    string GetPageUrl(int page)
    {
        var query = new List<string> { $"page={page}" };
        if (!string.IsNullOrEmpty(Model.SearchQuery))
            query.Add($"search={Uri.EscapeDataString(Model.SearchQuery)}");
        if (!string.IsNullOrEmpty(Model.RoleFilter))
            query.Add($"role={Model.RoleFilter}");
        return $"/admin/users?{string.Join("&", query)}";
    }
}
