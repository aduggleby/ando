@model Ando.Server.ViewModels.ProjectListViewModel
@using Ando.Server.Models
@using Ando.Server.ViewModels
@{
    ViewData["Title"] = "Projects";

    var deployedCount = Model.Projects.Count(p => p.DeploymentStatus == DeploymentStatus.Deployed);
    var failedCount = Model.Projects.Count(p => p.DeploymentStatus == DeploymentStatus.Failed);
    var notDeployedCount = Model.Projects.Count(p => p.DeploymentStatus == DeploymentStatus.NotDeployed);
}

<div class="page-header projects-unified-header">
    <div>
        <h1>Projects</h1>
        <p class="section-description mt-1">Unified project and deployment overview in one workspace.</p>
    </div>
    <a href="/projects/create" class="btn btn-primary">New Project</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-error">@TempData["Error"]</div>
}

@if (Model.Projects.Count == 0)
{
    <div class="empty-state">
        <h2>No projects yet</h2>
        <p class="mb-4">Connect a GitHub repository to get started with automated builds.</p>
        <div class="onboarding-checklist">
            <div class="checklist-item">
                <span class="checklist-number">1</span>
                <span>Connect a repository from your GitHub account</span>
            </div>
            <div class="checklist-item">
                <span class="checklist-number">2</span>
                <span>Configure build settings and secrets</span>
            </div>
            <div class="checklist-item">
                <span class="checklist-number">3</span>
                <span>Push code to trigger automated builds</span>
            </div>
        </div>
        <div class="mt-4 flex flex-wrap justify-center gap-3">
            <a href="/projects/create" class="btn btn-primary">Connect Repository</a>
            <a href="https://docs.ando.dev/getting-started" target="_blank" class="btn btn-secondary">View Documentation</a>
        </div>
    </div>
}
else
{
    <div class="section">
        <div class="status-controls">
            <div class="quick-filters">
                <span class="filter-label">Filter:</span>
                <button type="button" class="filter-btn filter-btn-active" data-filter="all" onclick="filterProjects('all')">
                    All <span class="filter-count">@Model.Projects.Count</span>
                </button>
                @if (deployedCount > 0)
                {
                    <button type="button" class="filter-btn filter-btn-success" data-filter="deployed" onclick="filterProjects('deployed')">
                        Deployed <span class="filter-count">@deployedCount</span>
                    </button>
                }
                @if (failedCount > 0)
                {
                    <button type="button" class="filter-btn filter-btn-failed" data-filter="failed" onclick="filterProjects('failed')">
                        Failed <span class="filter-count">@failedCount</span>
                    </button>
                }
                @if (notDeployedCount > 0)
                {
                    <button type="button" class="filter-btn" data-filter="notdeployed" onclick="filterProjects('notdeployed')">
                        Not Deployed <span class="filter-count">@notDeployedCount</span>
                    </button>
                }
            </div>

            <div class="sort-controls">
                <span class="sort-label">Sort:</span>
                <div class="sort-buttons">
                    @foreach (var field in Enum.GetValues<StatusSortField>())
                    {
                        var isActive = Model.SortField == field;
                        var newDirection = isActive && Model.SortDirection == SortDirection.Ascending
                            ? SortDirection.Descending
                            : SortDirection.Ascending;
                        var directionIcon = isActive
                            ? (Model.SortDirection == SortDirection.Ascending ? "↑" : "↓")
                            : "";
                        var label = field switch
                        {
                            StatusSortField.Alphabetical => "Name",
                            StatusSortField.LastDeployment => "Last Deployment",
                            StatusSortField.CreatedDate => "Created",
                            _ => field.ToString()
                        };

                        <a href="/projects?sortBy=@field&direction=@newDirection"
                           class="sort-btn @(isActive ? "sort-btn-active" : "")">
                            @label @directionIcon
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="projects-unified-list mt-6" id="projects-unified-list">
        @foreach (var project in Model.Projects)
        {
            var deploymentClass = project.DeploymentStatus.ToString().ToLower();
            var buildStatusClass = project.LastBuildStatus?.ToString().ToLower() ?? "none";
            var currentBuildLabel = project.LastBuildStatus?.ToString() ?? "No builds";

            <article class="project-row-card project-row-@deploymentClass" data-filter-group="@deploymentClass">
                <div class="project-row-main">
                    <div class="project-row-top">
                        <a href="/projects/@project.Id" class="project-row-name">@project.RepoFullName</a>
                        <div class="project-row-badges">
                            <span class="deployment-badge deployment-@deploymentClass">
                                @(project.DeploymentStatus switch
                                {
                                    DeploymentStatus.Deployed => "Deployed",
                                    DeploymentStatus.Failed => "Failed",
                                    _ => "Not Deployed"
                                })
                            </span>
                            <span class="status-badge status-@buildStatusClass">@currentBuildLabel</span>
                            @if (!project.IsConfigured)
                            {
                                <span class="status-badge status-cancelled">@project.MissingSecretsCount secret(s) missing</span>
                            }
                        </div>
                    </div>

                    <div class="project-row-metrics">
                        <span><strong>@project.TotalBuilds</strong> build(s)</span>
                        @if (project.LastDeploymentAt.HasValue)
                        {
                            <span title="@project.LastDeploymentAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")">
                                Last deployment: @FormatRelativeTime(project.LastDeploymentAt.Value)
                            </span>
                        }
                        else
                        {
                            <span>Last deployment: never</span>
                        }
                        @if (project.LastBuildAt.HasValue)
                        {
                            <span title="@project.LastBuildAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")">
                                Last build: @FormatRelativeTime(project.LastBuildAt.Value)
                            </span>
                        }
                        <span title="@project.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")">
                            Created: @FormatRelativeTime(project.CreatedAt)
                        </span>
                    </div>
                </div>

                <div class="project-row-actions">
                    <a href="/projects/@project.Id" class="btn btn-primary btn-sm">Open</a>
                    <a href="/projects/@project.Id/settings" class="btn btn-secondary btn-sm">Settings</a>
                    <a href="@project.RepoUrl" target="_blank" class="btn btn-secondary btn-sm">GitHub</a>
                </div>
            </article>
        }
    </div>
}

<script>
function filterProjects(filter) {
    const cards = document.querySelectorAll('.project-row-card');
    const buttons = document.querySelectorAll('.filter-btn');

    buttons.forEach(btn => {
        btn.classList.remove('filter-btn-active');
        if (btn.dataset.filter === filter) {
            btn.classList.add('filter-btn-active');
        }
    });

    cards.forEach(card => {
        const group = card.dataset.filterGroup;
        if (filter === 'all' || group === filter) {
            card.style.display = '';
        } else {
            card.style.display = 'none';
        }
    });
}
</script>

@functions {
    string FormatRelativeTime(DateTime dateTime)
    {
        var diff = DateTime.UtcNow - dateTime;

        if (diff.TotalMinutes < 1) return "just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        if (diff.TotalDays < 7) return $"{(int)diff.TotalDays}d ago";

        return dateTime.ToString("MMM d");
    }
}
